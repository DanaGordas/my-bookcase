<div class="container mt-3">
  <div class="">
    <%= link_to "All", books_path, class: "btn btn-outline-secondary" %>
    <% @categories.each do |c| %>
    <%= link_to c.name, books_path(category: c.name), class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
  <div class="card-row">
    <% @books.each do |b| %>
      <div class="card-category">
        <% if b.photo.attached? %>
          <%= link_to book_path(b) do %>
            <%= cl_image_tag(b.photo.key) %>
          <% end %>
        <% else %>
          <%= link_to book_path(b) do %>
            <%= image_tag 'book.jpg' %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

